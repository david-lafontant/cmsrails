


<div class="col-6 mx-auto" id="front_pages">
<h1>Root Page</h1>

<table class="table table-striped table-hover">
<caption>List of pages</caption>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
    </tr>
  </thead>
  <tbody>
  <% @pages.each do |page| %>
    <tr>
    <td>
        <%= page.title%>
    </td>
    <td>
    <%= url_for_page page %>
    </td>
    <td>
      <%= link_to "Show this page",  page_path(page), :class=> "btn btn-primary" %>
    </td>
    </tr>
  <% end %>
  </tbody>
  </table>

</div>